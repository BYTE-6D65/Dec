# Auth.js Configuration
AUTH_URL=http://localhost:3000

# Generate a random 32-character string for AUTH_SECRET
# You can use: openssl rand -base64 32
AUTH_SECRET=your_random_32_character_secret_string

# GitHub OAuth App
# Create at: https://github.com/settings/developers
# Callback URL: http://localhost:3000/api/auth/callback/github
GITHUB_ID=your_github_oauth_app_client_id
GITHUB_SECRET=your_github_oauth_app_client_secret

# Google OAuth (for YouTube API)
# Create at: https://console.cloud.google.com/
# Enable YouTube Data API v3
# Callback URL: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twitch OAuth
# Create at: https://dev.twitch.tv/console/apps
# Callback URL: http://localhost:3000/api/auth/callback/twitch
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
